#======================================================================
# PROBLEM DEFINITION
#======================================================================

 Domain {
     lower = [ 0.0, 0.0 ];
     upper = [ 1.0, 1.0 ];
 }

 Initial {
    list = ["value"];

    value {
        temperature = [ 1.00, "input/enzop-cello-half.png", 0.010000 ];
    }
    
 }

 Boundary {
     type = "periodic";
 }

 Stopping {
     cycle = 10;
    # time = 0.10000;
 }

#======================================================================
# DISCRETIZATION
#======================================================================

 Mesh {
     root_rank = 2;
     root_size   = [ 64, 32 ];  # total number of cells in root grid
     root_blocks = [  4,  2 ];  # number of blocks in root grid
                                # (so block size = (64/4,32/2) = (16,16)
 }

 Adapt {
     list = [ "slope" ];
     max_level = 5;
     slope {
         field_list = [ "temperature" ];
         max_coarsen = 10.0;
         min_refine = 20.0;
         type = "slope";
     }
 }

 Field {
     alignment = 8;
     gamma = 1.4000;
     ghost_depth = 4;
     list = [ "temperature" ];
     padding = 0;
 }

#======================================================================
# COMPUTATION
#======================================================================

 Method {

     # "hello": simple "hello world" test

     list = [ "hello" ];

     hello {
         timeStep = 10000.0;
	 maxLevel = 5;
     }
 }

#======================================================================
# OUTPUT
#======================================================================

 Output {
    list = [];    
 }
